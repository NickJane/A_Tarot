@using Lib.BaseClass;
@using Lib.ClassExt;
@using Lib.Utils;
@using Authorizations.Framework.Enums;
<!DOCTYPE html>

<html>
<head>
    <title></title>
    @*<script src="../../Scripts/jquery-1.4.1.min.js" type="text/javascript"></script>*@
    <link href="../../Content/Validate.css" rel="stylesheet" type="text/css" />
    <script src="../../Scripts/jquery-1.5.2.min.js" type="text/javascript"></script>
    <script src="../../Scripts/Tools.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="../../Scripts/Common.js" type="text/javascript"></script>
    <script src="../../Content/ueditor/editor_config.js" type="text/javascript"></script>
    <script src="../../Content/ueditor/editor_all_min.js" type="text/javascript"></script>

    <link href="../../Content/skins/Aqua/css/ligerui-all.css" rel="stylesheet" type="text/css" />
    <script src="../../Scripts/ligerui/plugins/ligerDrag.js" type="text/javascript"></script> 
    <script src="../../Scripts/ligerui/plugins/ligerDialog.js" type="text/javascript"></script>
    <script src="../../Scripts/ligerui/plugins/ligerGrid.js" type="text/javascript"></script>
    <link href="../../Content/ueditor/themes/default/ueditor.css" rel="stylesheet" type="text/css" />

    <script type="text/javascript">
        HeartBeat();
    </script>
    <style type="text/css">
        .body_Head div{ margin:5px;}
        /*grid*/
        .body_Content .divDatatableHeader{height:25px; display:block; border:1px solid #A3C0E8;padding-left:10px; background-color:#D0E4FE; border-bottom:0px;}
        .body_Content .divDatatableFooter{height:25px; display:block; border:1px solid #A3C0E8;padding-left:10px; background-color:#D0E4FE; border-top:0px;}
        .input_btn{ padding:1px 4px 1px 4px;  }
    </style>
    @*/* FORM LAYOUT ELEMENTS   */*@
    <style type="text/css">
        fieldset {
            border: 1px solid lightblue;
            padding: 0 1.4em 1.4em 1.4em;
            margin: 0 0 1.5em 0;
        }
        legend {
            font-size: 1.2em;
            font-weight: bold;
        }
        fieldset textarea {
            min-height: 75px;
        }

        input[type="text"], input[type="password"] {
            border: 1px solid #ccc;
            padding: 1px;
            font-size: 1em;
            color: #444;
            
        }
        fieldset input[type="text"], input[type="password"] 
        {
            width: 200px;
            }
        select {
            border: 1px solid #ccc;
            padding: 1px;
            font-size: 1em;
            color: #444;
        }

        input[type="submit"] {
            font-size: 1.2em;
            padding: 5px;
        }
        .display-label,.editor-label { display:inline-block; width:100px; text-align:right; padding-right:5px; margin:6px 0 6px 0; *display:inline;*zoom:1;}
        .display-field,.editor-field { display:inline-block;margin:6px 0 6px 0;*display:inline;*zoom:1;}
    </style>
    @*mvc验证样式*@
    <style type="text/css">
        .field-validation-error {
            color: #ff0000;
        }

        .field-validation-valid {
            display: none;
        }

        .input-validation-error {
            border: 1px solid #ff0000;
            background-color: #ffeeee;
        }

        .validation-summary-errors {
            font-weight: bold;
            color: #ff0000;
        }

        .validation-summary-valid {
            display: none;
        }
    </style>
    <script type="text/javascript">
        @(ViewBag.ServerScript)
    </script>
    @RenderSection("HtmlMetas",false)
</head>
<body>
    <div class="main" style="padding:3px;">
        @{Html.RenderPartial("_NaviPartial");}
        @RenderBody()
    </div>
</body>
</html>
