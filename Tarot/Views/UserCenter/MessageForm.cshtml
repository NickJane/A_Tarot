@model Data.MongoFramework.ModelMate.Messages
@{
    ViewBag.Title = "MessageForm";
    Layout = "~/Views/Shared/_LayoutUserCenter.cshtml";
}

<h2>发送短信</h2>
<p>每天能发送30条短信</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "")
    <div>
        <fieldset>
            <legend></legend>
            <div class="editor-label">
                收件人
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.ToUser.NicName)
            </div>
            <br />
            <div class="editor-label">
                标题
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Title, new {style="width:400px;" })
            </div>
            <br />

            <div class="editor-label">
                内容
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(m => m.Content, new { style = "width:400px;" , rows="6"})
            </div>

            <p>
                <input type="submit" value="确定" />
            </p>
        </fieldset>
    </div>
}
<script type="text/javascript">
    function ValidateForm() {
        //更多validate验证方法见 jquery.validate.MethodsExt.js
        $("form").validate({
            rules: {
                'ToUser.NicName': { required: true },
                'Title': { required: true, maxlength: 30 },
                'Content': { required: true, maxlength: 200 }
            }
        });
    }
    $("document").ready(function () {
        ValidateForm();
    });
</script>
